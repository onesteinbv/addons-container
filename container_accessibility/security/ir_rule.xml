<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="rule_curq_users_wu" model="ir.rule">
        <field name="name">rule_curq_users_wu</field>
        <field name="model_id" ref="base.model_res_users" />
        <field
            name="groups"
            eval="[(4, ref('container_accessibility.group_curq'))]"
        />
        <field
            name="domain_force"
            eval="['|', ('share', '=', True), ('groups_id', 'in', [ref('container_accessibility.group_curq')])]"
        />
        <field name="perm_read" eval="0" />
        <field name="perm_create" eval="0" />  <!-- Gets enforced by code -->
        <field name="perm_write" eval="1" />
        <field name="perm_unlink" eval="1" />
    </record>


    <record id="rule_curq_mail_server" model="ir.rule">
        <field name="name">rule_curq_mail_server</field>
        <field name="model_id" ref="base.model_ir_mail_server"/>
        <field name="domain_force">[('private', '=', False)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="groups" eval="[(4,ref('container_accessibility.group_curq'))]"/>
    </record>


    <record id="rule_curq_group" model="ir.rule">
        <field name="name">rule_curq_group</field>
        <field name="model_id" ref="base.model_res_groups"/>
        <field name="domain_force">[('id','=', -1)]</field>
        <field name="perm_read" eval="0"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="groups" eval="[(4,ref('container_accessibility.group_curq'))]"/>
    </record>
</odoo>
