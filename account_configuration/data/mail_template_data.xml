<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('name', '=', 'email_template_edi_invoice'), ('module', '=', 'account')]"/>
            </function>
            <value eval="{'noupdate': False}"/>
        </function>
        <!--Email template -->
        <record id="account.email_template_edi_invoice" model="mail.template">
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear
        <t t-if="object.partner_id.parent_id">
            <t t-out="object.partner_id.name or ''">Brandon Freeman</t> (<t t-out="object.partner_id.parent_id.name or ''">Azure Interior</t>),
        </t>
        <t t-else="">
            <t t-out="object.partner_id.name or ''">Brandon Freeman</t>,
        </t>
        <br /><br />
        Please find attached the invoice of:
        <br /><br />
        Company name:<span style="font-weight:bold;" t-out="object.company_id.name or ''">YourCompany</span>.
        <br /><br />
        <t t-if="object.name">
            Invoice number: <span style="font-weight:bold;" t-out="object.name or ''">INV/2021/05/0005</span><br /><br />
        </t>
        <t t-if="object.invoice_date_due">
             Due date:<span style="font-weight:bold;" t-out="object.invoice_date_due or ''">12/05/2024</span><br /><br />
        </t>
        Amount: <span style="font-weight:bold;" t-out="format_amount(object.amount_total, object.currency_id) or ''">$ 143,750.00</span>
        <br /><br /><br />
        <t t-if="object.payment_state in ('paid', 'in_payment')">
            This invoice is already paid.
        </t>
        <t t-else="">
            Please transfer payment as soon as possible
            <t t-if="object.company_id.bank_ids and object.company_id.bank_ids[0].acc_number">
                to <span style="font-weight:bold;" t-out="object.company_id.bank_ids[0].acc_number or ''">329237899</span>
            </t>
            <t t-if="object.name">
                , stating invoice number <span style="font-weight:bold;" t-out="object.name or ''">INV/2021/05/0005</span>.
            </t>
        </t>
        <br /><br />
        Should you have any questions, please do not hesitate to contact us.
        <t t-if="not is_html_empty(object.invoice_user_id.signature)">
            <br /><br />
            <t t-out="object.invoice_user_id.signature or ''"><br/>Mitchell Admin</t>
        </t>
        <br /><br />
        Kind regards,
        <br />
        <t t-out="object.invoice_user_id.name or ''">Mitchell Admin</t>
    </p>
</div>
            </field>
        </record>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('name', '=', 'email_template_edi_invoice'), ('module', '=', 'account')]"/>
            </function>
            <value eval="{'noupdate': True}"/>
        </function>
    </data>
</odoo>
